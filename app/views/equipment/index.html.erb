<div class="content">
  <div class="main-container">
    <%= render partial: "equipment", locals: { equipments: get_equipment(current_user.id) } %>
  </div>

  <div class="paginator">
    <%= paginate get_equipment(current_user.id), :remote => true %>
  </div>
</div>

<div class="modal fade" data-equipment-id="<%=current_user.id%>" id="addEquipment" tabindex="-1" role="dialog" aria-labelledby="addEquipmentTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Add Equipment</h5>
        </div>
          <%= render 'form', equipment: Equipment.new %>
      </div>
    </div>
  </div>