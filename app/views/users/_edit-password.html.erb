<%= form_for(user, :url => { :action => "update_password", :controller => "users" } ) do |f| %>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, class:"form-control", aria: { "describedby" => "currentPasswordHelp"}, required: true%>
      <small id="currentPasswordHelp" class="form-text text-muted">Please enter your current password to confirm changes.</small>
    </div>
    <div class="form-group">
      <%= f.label :password, "New Password" %><br />
      <%= f.password_field :password, :autocomplete => "off", class:"form-control", required: true%>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm New Password" %><br />
      <%= f.password_field :password_confirmation, class:"form-control", required: true%>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" id="close" data-dismiss="modal"><%= t('close') %></button>
    <%= f.submit t('submit'), class:"btn btn-primary"%>
  </div>
<% end %>