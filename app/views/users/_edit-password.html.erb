<div id="edit-password-alert"></div>
<%= form_for(user) do |f| %>
  <div class="modal-body">
    <%= f.hidden_field :authenticity_token, value: form_authenticity_token %>
    <%= f.hidden_field :id, value: current_user.id %>
    <div class="form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, class:"form-control current", aria: { "describedby" => "currentPasswordHelp"}, required: true%>
      <small id="currentPasswordHelp" class="form-text text-muted">Please enter your current password to confirm changes.</small>
    </div>
    <div class="form-group">
      <%= f.label :password, "New Password" %><br />
      <%= f.password_field :password, :autocomplete => "off", class:"form-control new", required: true%>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm New Password" %><br />
      <%= f.password_field :password_confirmation, class:"form-control confirm", required: true%>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" id="close" data-dismiss="modal"><%= t('close') %></button>
    <%= f.submit t('submit'), class:"btn btn-primary", remote: true %>
  </div>
<% end %>