<div class="field-unit__label">
  <%= f.label field.attribute %>
</div>
<div class="field-unit__field">
  <%= f.text_field field.attribute, value: field.data.join(","), aria: { "describedby" => "choicesHelp" }, pattern: "(([^\s]+[' ']*)([,]{1})?)+", maxlength: 150 %>
  <small id="choicesHelp" >Separate choices with commas</small>
</div>
