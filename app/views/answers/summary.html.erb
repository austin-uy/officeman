<h2><%= possesive(get_user(params[:user_id]).name) %>Answered Questions</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr class="table-info">
      <th scope="col">Question</th>
      <th scope="col">Answer</th>
      <th scope="col">Date Answered</th>
    </tr>
  </thead>
  <% @answers.each do |answer| %>
  <tr>
      <th scope="row"><%= get_question(answer.question_id).question%></th>
      <td><%= answer.answer %></td>
      <td><%= answer.updated_at %></td>
  </tr>
  <% end %>
</table>