<% questions.each do |question| %>
<div class="w-50 mx-auto card" id="question-card">
  <div class="card-header">
    <h4 class="card-title"><%= question.question %></h4>
  </div>
  <div class="card-body">
    <% if question.answers.empty? %>
      <h3 class="text-muted"> 
        <p class="text-center">
          <%= t('empty') %>.
        </p>
      </h3>
    <% else %>
      <table class="table table-striped table-hover">
        <thead>
          <tr class="table-info">
            <th scope="col">Name</th>
            <th scope="col">Answer</th>
            <th scope="col">Date Answered</th>
          </tr>
        </thead>
        <% question.answers.each do |answer| %>
          <tr>
            <th scope="row"><%= image_tag get_user(answer.user_id).picture.url(:thumb) %> <%= get_user(answer.user_id).name %></th>
            <td><%= answer.answer %></td>
            <td><%= answer.updated_at.localtime %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>
<% end %>